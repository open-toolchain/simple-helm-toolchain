{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
       "$i18n": "locales.yml"
    },
     "title": {
      "$ref": "#/messages/deploy.title"
    },
    "description": {
      "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
      "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
       "api-key": {
            "description": "The Bluemix API key is used to access the IBM Container Service API and interact with the cluster. You can obtain your API key with 'bx iam api-key-create' or via the console at https://console.ng.bluemix.net/iam/#/apikeys by clicking **Create API key** (Each API key only can be viewed once).",
            "type": "string",
            "pattern": "\\S"
        },
       "registry-region": {
          "description": "The bluemix region for image registry",
          "type": "string"
        },
       "registry-namespace": {
          "description": "The namespace in the container image registry. You can set it up with {bx cr namespace-add]. Learn more at https://console.bluemix.net/docs/services/Registry/index.html .",
          "type": "string",
          "pattern": "\\S"
        },
        "staging-region": {
            "description": "The bluemix region for staging deployment",
            "type": "string"
        },
       "staging-cluster-name": {
            "description": "The name of staging cluster. Retrieve it with [bx cs clusters] or via the console at https://console.ng.bluemix.net/containers-kubernetes/home/clusters .",
            "type": "string",
            "pattern": "\\S"
        },
        "staging-cluster-namespace": {
          "description": "Staging namespace",
          "type": "string",
          "pattern": "\\S"
        },
        "prod-region": {
            "description": "The bluemix region for prod deployment",
            "type": "string"
        },
       "prod-cluster-name": {
            "description": "The name of prod cluster. Retrieve it with [bx cs clusters] or via the console at https://console.ng.bluemix.net/containers-kubernetes/home/clusters .",
            "type": "string",
            "pattern": "\\S"
        },
        "prod-cluster-namespace": {
          "description": "Prod namespace",
          "type": "string",
          "pattern": "\\S"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
       "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
       "app-name": {
            "description": {
              "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": ["app-name", "api-key", "registry-region", "registry-namespace", "prod-region", "prod-cluster-name", "prod-cluster-namespace", "prod-region", "prod-cluster-name", "prod-cluster-namespace", "prod-organization", "prod-space"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },{
          "type": "text",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.appName"
          },
          "key": "app-name"
        },{
          "type": "table",
          "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [
                {
                  "type": "label",
                  "title": "Container registry region"
                },{
                  "type": "label",
                  "title": ""
                },{                    
                  "type": "label",
                  "title": "Container registry namespace"
                },{
                  "type": "select",
                  "title": "Container image registry region",
                  "key": "registry-region"
                },{
                  "type": "label",
                  "title": ""
                },{
                  "type": "text",
                  "readonly": false,
                  "title": "Container image registry namespace",
                  "key": "registry-namespace"
                }
            ]
        },{
          "type": "select",
          "title": {
            "$ref": "#/messages/organization"
            },
            "key": "prod-organization"
          },{
            "type": "select",
            "title": {
              "$ref": "#/messages/space"
            },
            "key": "prod-space"
          },{
            "type": "password",
            "readonly": false,
            "title": "Bluemix API key",
            "key": "api-key"
          },{
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "27%", "27%", "27%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },{
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/region"
                  }
                },{
                  "type": "label",
                  "title": "Cluster name"
                },{
                  "type": "label",
                  "title": "Cluster namespace"
                },{
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/stagingStage"
                  }
                },{
                  "type": "select",
                  "key": "staging-region"
                },{
                  "type": "text",
                  "key": "staging-cluster-name",
                  "readonly": false
                },{
                  "type": "text",
                  "key": "staging-cluster-namespace",
                  "readonly": false
                },{
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/prodStage"
                  }
                },{
                  "type": "select",
                  "key": "prod-region"
                },{
                  "type": "text",
                  "key": "prod-cluster-name",
                  "readonly": false
                },{
                  "type": "text",
                  "key": "prod-cluster-namespace",
                  "readonly": false
                }
            ]
        },{
          "type": "table",
          "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },{
                  "type": "label",
                  "title": "Retrieve the Kubernetes cluster name with the CLI command 'bx cs clusters' or via the [console](https://console.bluemix.net/containers-kubernetes/home/clusters)."
                },{
                  "type": "label",
                  "title": ""
                },{
                  "type": "label",
                  "title": "If the cluster namespace doesn't exist already, it will be automatically created and configured."
                }
            ]
        }
    ]
}
